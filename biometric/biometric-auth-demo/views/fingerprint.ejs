<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <span class="logo">üîê</span>
                <span>Biometric Auth</span>
            </div>
            <div class="nav-menu">
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/dashboard/profile" class="nav-link">Profile</a>
                <span class="nav-user">üë§ <%= user.username %></span>
                <a href="/auth/logout" class="nav-link logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="container">
            <h1>üëÜ Fingerprint Authentication</h1>

            <div class="biometric-demo-card">
                <div class="biometric-info">
                    <h2>How It Works</h2>
                    <p>Fingerprint recognition scans the unique ridge patterns on your fingertip. Each person has a completely unique fingerprint that never changes throughout their lifetime.</p>
                    <ul>
                        <li><strong>Speed:</strong> < 1 second</li>
                        <li><strong>Accuracy:</strong> 99.8%</li>
                        <li><strong>Type:</strong> Physical Biometric</li>
                    </ul>
                </div>

                <div class="biometric-simulator">
                    <h2><%= enrolled ? 'Verify Fingerprint' : 'Enroll Fingerprint' %></h2>
                    <div class="fingerprint-scanner <%= enrolled ? '' : 'enrollment-mode' %>" id="fingerprintScanner">
                        <div class="scan-animation">
                            <div class="fingerprint-icon">üëÜ</div>
                            <div class="scan-line"></div>
                        </div>
                        <p class="scan-instruction">Place your finger on the scanner</p>
                    </div>

                    <div class="action-buttons">
                        <% if (!enrolled) { %>
                            <button class="btn btn-primary" id="enrollBtn">Enroll Fingerprint</button>
                        <% } else { %>
                            <button class="btn btn-primary" id="verifyBtn">Verify Fingerprint</button>
                        <% } %>
                    </div>

                    <div id="resultDisplay" class="result-display"></div>
                </div>
            </div>

            <div class="info-card">
                <h3>Real-World Applications</h3>
                <div class="application-grid">
                    <div class="application-item">
                        <span class="app-icon">üì±</span>
                        <strong>Smartphones</strong>
                        <p>iPhone Touch ID, Android Fingerprint</p>
                    </div>
                    <div class="application-item">
                        <span class="app-icon">üíª</span>
                        <strong>Laptops</strong>
                        <p>Windows Hello, MacBook Touch ID</p>
                    </div>
                    <div class="application-item">
                        <span class="app-icon">üè¶</span>
                        <strong>Banking</strong>
                        <p>ATM access, mobile banking apps</p>
                    </div>
                    <div class="application-item">
                        <span class="app-icon">üè¢</span>
                        <strong>Access Control</strong>
                        <p>Building entry, time attendance</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Biometric Authentication Demo</p>
        </div>
    </footer>

    <script>
        const enrolled = <%= enrolled ? 'true' : 'false' %>;
        const scanner = document.getElementById('fingerprintScanner');
        const resultDisplay = document.getElementById('resultDisplay');

        <% if (!enrolled) { %>
            document.getElementById('enrollBtn').addEventListener('click', async () => {
                scanner.classList.add('scanning');
                resultDisplay.innerHTML = '<p class="info">Scanning fingerprint...</p>';

                setTimeout(async () => {
                    try {
                        const response = await fetch('/biometric/enroll/fingerprint', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                fingerprintData: { finger: 'index', quality: 95 }
                            })
                        });

                        const result = await response.json();
                        scanner.classList.remove('scanning');

                        if (result.success) {
                            resultDisplay.innerHTML = '<div class="alert alert-success"><strong>‚úì Success!</strong> Fingerprint enrolled successfully. Redirecting...</div>';
                            setTimeout(() => window.location.reload(), 2000);
                        } else {
                            resultDisplay.innerHTML = '<div class="alert alert-error"><strong>‚úó Failed</strong> ' + (result.error || 'Enrollment failed') + '</div>';
                        }
                    } catch (error) {
                        scanner.classList.remove('scanning');
                        resultDisplay.innerHTML = '<div class="alert alert-error"><strong>‚úó Error</strong> ' + error.message + '</div>';
                    }
                }, 2000);
            });
        <% } else { %>
            document.getElementById('verifyBtn').addEventListener('click', async () => {
                scanner.classList.add('scanning');
                resultDisplay.innerHTML = '<p class="info">Verifying fingerprint...</p>';

                setTimeout(async () => {
                    try {
                        const response = await fetch('/biometric/verify/fingerprint', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                fingerprintData: { simulateSuccess: true }
                            })
                        });

                        const result = await response.json();
                        scanner.classList.remove('scanning');

                        if (result.success) {
                            resultDisplay.innerHTML = `
                                <div class="alert alert-success">
                                    <strong>‚úì Verified!</strong> Confidence: ${result.confidence}%
                                    <p>${result.message}</p>
                                </div>
                            `;
                        } else {
                            resultDisplay.innerHTML = `
                                <div class="alert alert-error">
                                    <strong>‚úó Failed</strong> Confidence: ${result.confidence}%
                                    <p>${result.message || result.error}</p>
                                </div>
                            `;
                        }
                    } catch (error) {
                        scanner.classList.remove('scanning');
                        resultDisplay.innerHTML = '<div class="alert alert-error"><strong>‚úó Error</strong> ' + error.message + '</div>';
                    }
                }, 2000);
            });
        <% } %>
    </script>
</body>
</html>
